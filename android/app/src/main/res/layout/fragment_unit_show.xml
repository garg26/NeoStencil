<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/unit_show_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.longtailvideo.jwplayer.JWPlayerView
        android:id="@+id/jwplayer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:id="@+id/show_unit_progress_bar"/>


    <LinearLayout
        android:id="@+id/ll_notes"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:paddingTop="28dp"
        android:paddingBottom="48dp"
        android:background="#CC000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_note_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
           />

        <Button
            android:id="@+id/btn_open_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textAllCaps="false"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/oval_shape_button"/>

    </LinearLayout>


</FrameLayout>